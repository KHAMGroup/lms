# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.returnToDashboard()
#POST	/			    controllers.MainController.showDashboard()
POST	/			    controllers.MainController.search()
GET		/search/:clientOrCase/$data<.*>		controllers.MainController.searchResults(clientOrCase: String, data: String)
GET	/login			    controllers.Application.login()
POST	/login			    controllers.Application.authenticate()

GET	/logout			    controllers.Application.logout()

# POST	/search/:clientsOrCases		controllers.MainController.search(clientsOrCases: String)
#POST	/search/			controllers.MainController.search()

GET		/clients/:id		controllers.ClientController.viewClient(id: Int)
GET		/clients/:id/edit		controllers.ClientController.editClient(id: Int)
POST	/clients/new	controllers.ClientController.createClient()
POST	/clients/save	controllers.ClientController.saveClient()
POST	/clients/:id/update		controllers.ClientController.updateClient(id: Int)

GET	/deposits/:id				controllers.DepositController.viewDeposit(id: Int)
POST	/clients/:clientId/deposit/new		controllers.DepositController.createDeposit(clientId: Int)
POST	/clients/:clientId/deposit/save		controllers.DepositController.saveDeposit(clientId: Int)
GET	/deposit/:id/refund			controllers.DepositController.getDepositRefund(id: Int)
POST	/deposit/:id/refund/save		controllers.DepositController.saveDepositRefund(id: Int)

GET		/cases/:clientID/new	controllers.CaseController.createCase(clientID: Int)
POST	/cases/save	controllers.CaseController.saveCase()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
