# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.returnToDashboard()
#POST	/			    controllers.MainController.showDashboard()
POST	/			    controllers.MainController.search()
GET	/login			    controllers.Application.login()
POST	/login			    controllers.Application.authenticate()

GET	/logout			    controllers.Application.logout()

# POST	/search/:clientsOrCases		controllers.MainController.search(clientsOrCases: String)
#POST	/search/			controllers.MainController.search()

POST	/clients/new	controllers.ClientController.createClient()
POST	/clients/save	controllers.ClientController.saveClient()

POST	/cases/new	controllers.CaseController.createCase()
POST	/cases/save	controllers.CaseController.saveCase()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
